@model Submission

<h4>Details about your submission placed on @Model.Created.ToLongDateString()</h4>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Course</th>
            <th>Requested Exception</th>
            <th>Total Requested</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var request in Model.Requests) {
            <tr>
                <td>@request.CourseNumber</td>
                <td>@request.ExceptionAnnualizedTotal</td>
                <td>@request.Total</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="table-info">
            <td colspan="2">
                Total
            </td>
            <td>
                @Model.Requests.Sum(x=>x.AnnualizedTotal)
            </td>
        </tr>
    </tfoot>
</table>